# AI Sales Assistant - Environment Configuration
# Copy this file to .env and fill in your actual API credentials

# =============================================================================
# GOOGLE GEMINI AI CONFIGURATION
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# GOOGLE OAUTH 2.0 CONFIGURATION (GMAIL)
# =============================================================================
# Create OAuth 2.0 credentials at: https://console.cloud.google.com/apis/credentials
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:8501/auth/callback

# =============================================================================
# GOOGLE OAUTH 2.0 CONFIGURATION (SHEETS)
# =============================================================================
# Create OAuth 2.0 credentials at: https://console.cloud.google.com/apis/credentials
SHEETS_CLIENT_ID=your_sheets_client_id_here
SHEETS_CLIENT_SECRET=your_sheets_client_secret_here
SHEETS_REDIRECT_URI=http://localhost:8501/auth/callback

# =============================================================================
# CALENDLY INTEGRATION
# =============================================================================
# Get your API key from: https://calendly.com/app/admin/integrations/api-keys
CALENDLY_API_KEY=your_calendly_api_key_here

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Get your service account key from: https://console.firebase.google.com/project/_/settings/serviceaccounts/adminsdk
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_PRIVATE_KEY_ID=your_private_key_id_here
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key content here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your_service_account_email@project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
MAX_EMAILS_PER_DAY=100
FOLLOW_UP_DELAY_HOURS=48
MAX_FOLLOW_UPS=3
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=17
TIMEZONE=UTC

# =============================================================================
# AUTOMATION CONFIGURATION
# =============================================================================
BATCH_SIZE=50
PROCESSING_INTERVAL_MINUTES=15
MAX_CONCURRENT_CAMPAIGNS=10
LEAD_SCORE_THRESHOLD=0.7
ENGAGEMENT_TIMEOUT_HOURS=168

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
BATCH_WRITE_SIZE=500
CACHE_TTL_SECONDS=3600
MAX_QUERY_RESULTS=1000

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
DEBUG=False
ENVIRONMENT=production
LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL: ADVANCED CONFIGURATION
# =============================================================================
# AI Model Configuration
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=2048
GEMINI_TEMPERATURE=0.7

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Sentry Configuration (for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# Prometheus Configuration (for metrics)
PROMETHEUS_PORT=9090

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit your .env file to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Use different OAuth credentials for development and production
# 4. Test all integrations in development before deploying to production
# 5. Monitor your API usage to stay within rate limits
